@using AuctionsApp.Data.Entity
@model List<Listing>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager

@{
    ViewData["Title"] = "Index";
}

<h2>Active Listing</h2>

@foreach(var listing in Model)
{
    <div class="container bg-secondary" style="margin-top: 50px; margin-bottom: 50px; padding: 20px; border-radius: 10px;">
        <div class="row">
            <div class="col col-xs-6 col-lg-5">
                <img src="~/Images/@listing.ImagePath" style="max-width: 300px; max-height: 300px;"/>
            </div>

            <div class="col col-xs-6 col-lg-7">
                <h5>
                    <a asp-action="Details" asp-route-id="@listing.Id" style="color: black;">@listing.Title</a>
                </h5>
                <div>
                    @listing.Description
                </div>
                <div>
                    Bid: $@listing.Price.ToString("N2")
                </div>
                <div>
                    Listed By: @listing.User?.UserName
                </div>

                @if (User.Identity!.IsAuthenticated)
                {
                    @if (userManager.GetUserId(User) == listing.User?.Id)
                    {
                        <div class="my-3">
                            <a asp-action="Edit" asp-route-id="@listing.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@listing.Id" class="btn btn-danger mx-3">Delete</a>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
}

@if (!Model.Any())
{
    <p>No Active Listings</p>
}